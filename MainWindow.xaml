<Window x:Class="Studio_Rent_Service.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Studio_Rent_Service"
        mc:Ignorable="d"
        Title="Сервис Аренды Студий Звукозаписи" 
        Height="600" 
        Width="900"
        MinHeight="400" 
        MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#f5f7fa">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2c3e50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🎬 Студия проката оборудования" 
                      Foreground="White" 
                      FontSize="28" 
                      FontWeight="Bold"/>
                    <!-- Информация о пользователе (если есть) -->
                    <TextBlock x:Name="txtUserInfo" 
                      Foreground="#bdc3c7" 
                      FontSize="14"
                      Margin="20,0,0,0"
                      VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnSettings" 
                   Content="⚙️ Настройки" 
                   Background="#34495e"
                   Margin="5,0"
                   Padding="10,5"
                   Click="BtnSettings_Click"/>
                    <Button x:Name="btnAbout" 
                   Content="ℹ️ О программе" 
                   Background="#34495e"
                   Margin="5,0"
                   Padding="10,5"
                   Click="BtnAbout_Click"/>
                </StackPanel>

                <!-- Кнопка выхода -->
                <Button Grid.Column="2" 
               x:Name="btnLogout" 
               Content="🚪 Выход" 
               Background="#c0392b"
               Margin="10,0,0,0"
               Padding="15,5"
               Click="BtnLogout_Click"
               ToolTip="Выйти из системы"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Модуль студий -->
            <Border Grid.Column="0" 
                   Background="White" 
                   Margin="10" 
                   CornerRadius="10"
                   BorderBrush="#dfe6e9" 
                   BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок модуля -->
                    <Border Grid.Row="0" 
                           Background="#3498db" 
                           CornerRadius="10,10,0,0"
                           Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏢" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Студии" 
                                      Foreground="White" 
                                      FontSize="18" 
                                      FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Контент модуля -->
                    <StackPanel Grid.Row="1" 
                               Margin="15"
                               VerticalAlignment="Center">
                        <TextBlock Text="Управление информацией о студиях:" 
                                  Foreground="#2c3e50"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,15"/>

                        <TextBlock Text="• Код студии" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                        <TextBlock Text="• Название" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                        <TextBlock Text="• Адрес" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                        <TextBlock Text="• Оборудование" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                        <TextBlock Text="• Стоимость аренды" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                    </StackPanel>

                    <!-- Кнопка перехода -->
                    <Button Grid.Row="2" 
                           Content="📋 Перейти к студиям →" 
                           Background="#3498db"
                           Margin="15,0,15,15"
                           Padding="15,10"
                           FontSize="14"
                           Click="BtnStudios_Click"
                           HorizontalContentAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Модуль клиентов -->
            <Border Grid.Column="1" 
                   Background="White" 
                   Margin="10" 
                   CornerRadius="10"
                   BorderBrush="#dfe6e9" 
                   BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок модуля -->
                    <Border Grid.Row="0" 
                           Background="#2ecc71" 
                           CornerRadius="10,10,0,0"
                           Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👥" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Клиенты" 
                                      Foreground="White" 
                                      FontSize="18" 
                                      FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Контент модуля -->
                    <StackPanel Grid.Row="1" 
                               Margin="15"
                               VerticalAlignment="Center">
                        <TextBlock Text="Управление информацией о клиентах:" 
                                  Foreground="#2c3e50"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,15"/>

                        <TextBlock Text="• Код клиента" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                        <TextBlock Text="• ФИО" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                        <TextBlock Text="• Контактные данные" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                        <TextBlock Text="• Телефон" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                        <TextBlock Text="• Email" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                    </StackPanel>

                    <!-- Кнопка перехода -->
                    <Button Grid.Row="2" 
                           Content="📋 Перейти к клиентам →" 
                           Background="#2ecc71"
                           Margin="15,0,15,15"
                           Padding="15,10"
                           FontSize="14"
                           Click="BtnClients_Click"
                           HorizontalContentAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Модуль бронирований -->
            <Border Grid.Column="2" 
                   Background="White" 
                   Margin="10" 
                   CornerRadius="10"
                   BorderBrush="#dfe6e9" 
                   BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок модуля -->
                    <Border Grid.Row="0" 
                           Background="#e74c3c" 
                           CornerRadius="10,10,0,0"
                           Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📅" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Бронирования" 
                                      Foreground="White" 
                                      FontSize="18" 
                                      FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Контент модуля -->
                    <StackPanel Grid.Row="1" 
                               Margin="15"
                               VerticalAlignment="Center">
                        <TextBlock Text="Управление информацией о бронированиях:" 
                                  Foreground="#2c3e50"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,15"/>

                        <TextBlock Text="• Код бронирования" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                        <TextBlock Text="• Дата и время" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                        <TextBlock Text="• Студия" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                        <TextBlock Text="• Клиент" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                        <TextBlock Text="• Статус" 
                                  Foreground="#7f8c8d"
                                  Margin="5"/>
                    </StackPanel>

                    <!-- Кнопка перехода -->
                    <Button Grid.Row="2" 
                           Content="📋 Перейти к бронированиям →" 
                           Background="#e74c3c"
                           Margin="15,0,15,15"
                           Padding="15,10"
                           FontSize="14"
                           Click="BtnReservations_Click"
                           HorizontalContentAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Статистика и нижняя панель -->
        <Border Grid.Row="2" 
               Background="#34495e" 
               Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Статистика -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#2c3e50" 
                           Padding="10,5" 
                           CornerRadius="5"
                           Margin="0,0,10,0">
                        <TextBlock x:Name="txtStudioCount" 
                                  Text="Студии: 0" 
                                  Foreground="#3498db"
                                  FontWeight="Bold"/>
                    </Border>

                    <Border Background="#2c3e50" 
                           Padding="10,5" 
                           CornerRadius="5"
                           Margin="0,0,10,0">
                        <TextBlock x:Name="txtClientCount" 
                                  Text="Клиенты: 0" 
                                  Foreground="#2ecc71"
                                  FontWeight="Bold"/>
                    </Border>

                    <Border Background="#2c3e50" 
                           Padding="10,5" 
                           CornerRadius="5">
                        <TextBlock x:Name="txtReservationCount" 
                                  Text="Бронирования: 0" 
                                  Foreground="#e74c3c"
                                  FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <!-- Информация о системе -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Studio Rent Service v1.0" 
                              Foreground="#bdc3c7"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                    <TextBlock Text="© 2025" 
                              Foreground="#95a5a6"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
