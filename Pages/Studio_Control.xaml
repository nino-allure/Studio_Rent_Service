<Window x:Class="Studio_Rent_Service.Pages.Studio_Control"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Studio_Rent_Service.Pages"
        mc:Ignorable="d"
        Title="Studio_Control" MinHeight="500" MinWidth="800"
        Height="700" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2c3e50" Padding="20">
            <TextBlock Text="Управление студиями" 
                   Foreground="White" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                Margin="0,0,10,0" 
                BorderBrush="#bdc3c7" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Background="#f8f9fa">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Данные студии" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"
                               Foreground="#2c3e50"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Код студии:" Grid.Column="0"/>
                            <TextBox x:Name="txtCode" Grid.Column="1" 
                                 Height="30"
                                 IsReadOnly="True"
                                 Background="#ecf0f1"/>
                        </Grid>

                        <!-- Название -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Название:" Grid.Column="0"/>
                            <TextBox x:Name="txtName" Grid.Column="1" 
                                 Height="30"
                                 MaxLength="100"/>
                        </Grid>

                        <!-- Адрес -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Адрес:" Grid.Column="0"/>
                            <TextBox x:Name="txtAddress" Grid.Column="1" 
                                 Height="30"
                                 MaxLength="200"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Оборудование:" Grid.Column="0"/>
                            <TextBox x:Name="txtEquipment" Grid.Column="1" 
                                 Height="80"
                                 MaxLength="500"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                        </Grid>

                        <!-- Стоимость аренды -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Стоимость аренды:" Grid.Column="0"/>
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtRentalCost" Grid.Column="0" 
                                     Height="30"/>
                                <TextBlock Text="₽/час" 
                                       Grid.Column="1" 
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>

                        <!-- Кнопки управления -->
                        <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button x:Name="btnAdd" 
                                Content="Добавить" 
                                Background="#27ae60" 
                                Foreground="White"
                                Click="BtnAdd_Click" Margin="0,0,10,0"/>
                            <Button x:Name="btnUpdate" 
                                Content="Обновить" 
                                Background="#2980b9" 
                                Foreground="White"
                                Click="BtnUpdate_Click" Margin="0,0,10,0"/>
                            <Button x:Name="btnDelete" 
                                Content="Удалить" 
                                Background="#c0392b" 
                                Foreground="White"
                                Click="BtnDelete_Click" Margin="0,0,10,0"/>
                            <Button x:Name="btnClear" 
                                Content="Очистить" 
                                Background="#7f8c8d" 
                                Foreground="White"
                                Click="BtnClear_Click"/>
                        </WrapPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <GridSplitter Grid.Column="1" 
                      Width="5" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Stretch"
                      Background="#bdc3c7"
                      ShowsPreview="True"/>

            <!-- Правая панель - Список студий -->
            <Border Grid.Column="2" 
                BorderBrush="#bdc3c7" 
                BorderThickness="1"
                CornerRadius="5"
                Background="#f8f9fa">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок списка -->
                    <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            Margin="15,15,15,10">
                        <TextBlock x:Name="txtStudioCount" 
                               Margin="10,0,0,0" 
                               FontSize="14"
                               Foreground="#7f8c8d"
                               VerticalAlignment="Center"/>
                        <TextBlock Text="Список студий" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="#2c3e50"/>
                    </StackPanel>

                    <Grid Grid.Row="0" Margin="15,0,15,10" VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Поиск:" 
                               Grid.Column="1" 
                               Margin="161,0,0,0"
                               VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="39" Height="20"/>
                        <TextBox x:Name="txtSearch" 
                             Grid.Column="1" 
                             Height="30"
                             TextChanged="TxtSearch_TextChanged" Margin="205,0,0,0"/>
                        <Button x:Name="btnSearchClear" 
                            Grid.Column="2" 
                            Content="✕" 
                            Margin="5,0,0,0"
                            Width="30"
                            Height="30"
                            Click="BtnSearchClear_Click"
                            ToolTip="Очистить поиск"/>
                    </Grid>

                    <DataGrid x:Name="dgStudios" 
                          Grid.Row="1" 
                          Margin="15,0,15,15"
                          SelectionChanged="DgStudios_SelectionChanged"
                          AutoGeneratingColumn="DgStudios_AutoGeneratingColumn">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Код" 
                                            Binding="{Binding Code}" 
                                            Width="60"/>
                            <DataGridTextColumn Header="Название" 
                                            Binding="{Binding Name}" 
                                            Width="*"/>
                            <DataGridTextColumn Header="Адрес" 
                                            Binding="{Binding Address}" 
                                            Width="*"/>
                            <DataGridTextColumn Header="Стоимость" 
                                            Binding="{Binding RentalCost, StringFormat='{}{0:N0} ₽/час'}" 
                                            Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Статус бар -->
                    <StatusBar Grid.Row="2" Background="#ecf0f1">
                        <StatusBarItem>
                            <TextBlock x:Name="txtStatus" Text="Готово"/>
                        </StatusBarItem>
                        <Separator/>
                        <StatusBarItem HorizontalAlignment="Right">
                            <TextBlock Text="{Binding ElementName=dgStudios, Path=Items.Count, StringFormat='Всего: {0}'}"/>
                        </StatusBarItem>
                    </StatusBar>
                </Grid>
            </Border>
        </Grid>

        <!-- Нижняя панель с информацией -->
        <Border Grid.Row="2" Background="#ecf0f1" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Система управления студиями" 
                       Foreground="#7f8c8d"
                       Margin="0,0,20,0"/>
                <TextBlock Text="© 2024 StudioManager" 
                       Foreground="#7f8c8d"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
