<Window x:Class="Studio_Rent_Service.Views.Studios.StudioEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Studio_Rent_Service.Views.Studios"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="500" 
        Width="500"
        MinHeight="450" 
        MinWidth="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                  Text="{Binding WindowTitle}" 
                  FontSize="20" 
                  FontWeight="Bold"
                  Margin="0,0,0,15"
                  HorizontalAlignment="Center"/>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Код студии -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Код студии:" Grid.Column="0"/>
                    <TextBox Grid.Column="1" 
                            Text="{Binding Code}"
                            IsReadOnly="True"
                            Background="#f5f5f5"/>
                </Grid>

                <!-- Название -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Название:" Grid.Column="0"/>
                    <TextBox Grid.Column="1" 
                            Text="{Binding Name}"/>
                </Grid>

                <!-- Адрес -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Адрес:" Grid.Column="0"/>
                    <TextBox Grid.Column="1" 
                            Text="{Binding Address}"/>
                </Grid>

                <!-- Оборудование -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Оборудование:" Grid.Column="0"/>
                    <TextBox Grid.Column="1" 
                            Height="80"
                            Text="{Binding Equipment}"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"/>
                </Grid>

                <!-- Стоимость аренды -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Стоимость аренды:" Grid.Column="0"/>
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                Text="{Binding RentalCost, StringFormat='{}{0:N0}'}"/>
                        <TextBlock Text="₽/час" 
                                  Grid.Column="1" 
                                  Margin="10,0,0,0"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center"
                   Margin="0,15,0,0">
            <Button Content="Сохранить" 
                   Background="#27ae60" 
                   Foreground="White"
                   Click="BtnSave_Click"
                   MinWidth="100"/>

            <Button Content="Отмена" 
                   Background="#7f8c8d" 
                   Foreground="White"
                   Click="BtnCancel_Click"
                   Margin="10,0,0,0"
                   MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>
