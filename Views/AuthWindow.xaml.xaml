<Window x:Class="Studio_Rent_Service.Views.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Авторизация - Studio Rent Service" 
        Height="450" 
        Width="400"
        MinHeight="400" 
        MinWidth="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Background="#f8f9fa">
        <!-- Фон с градиентом -->
       
        <Border Background="White" 
                Margin="30" 
                CornerRadius="10"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20">
                    <TextBlock Text="🔐" 
                              FontSize="40" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Studio Rent Service" 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="#2c3e50"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Авторизация в системе" 
                              FontSize="14" 
                              Foreground="#7f8c8d"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Форма авторизации -->
                <StackPanel Grid.Row="1">
                    <!-- Имя пользователя -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Имя пользователя:" 
                                  FontWeight="SemiBold"
                                  Foreground="#2c3e50"
                                  Margin="0,0,0,5"/>
                        <TextBox x:Name="txtUsername" 
                                Height="40"
                                TextChanged="TxtUsername_TextChanged"/>
                    </StackPanel>

                    <!-- Пароль -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Пароль:" 
                                  FontWeight="SemiBold"
                                  Foreground="#2c3e50"
                                  Margin="0,0,0,5"/>
                        <PasswordBox x:Name="txtPassword" 
                                    Height="40"
                                    PasswordChanged="TxtPassword_PasswordChanged"/>
                    </StackPanel>

                    <!-- Сообщение об ошибке -->
                    <Border x:Name="errorMessageBorder" 
                           Background="#ffeaea" 
                           BorderBrush="#ff6b6b" 
                           BorderThickness="1"
                           CornerRadius="5"
                           Padding="10"
                           Margin="0,0,0,15"
                           Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️" 
                                      FontSize="16"
                                      Margin="0,0,8,0"/>
                            <TextBlock x:Name="txtErrorMessage" 
                                      Foreground="#c0392b"
                                      TextWrapping="Wrap"
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>


                <Button Grid.Row="2" 
                       x:Name="btnLogin" 
                       Content="Войти в систему" 
                       Background="#FF121212" 
                       Foreground="Black"
                       FontWeight="Bold"
                       FontSize="16"
                       Height="45"
                       Click="BtnLogin_Click"
                       IsEnabled="False" BorderBrush="Black"/>

                <!-- Информация о системе -->
                <StackPanel Grid.Row="3" 
                           HorizontalAlignment="Center" 
                           Margin="0,15,0,0">
                    <TextBlock Text="Тестовые учетные записи:" 
                              FontSize="12" 
                              Foreground="#7f8c8d"
                              HorizontalAlignment="Center"/>

                    <WrapPanel HorizontalAlignment="Center" 
                              Margin="0,5,0,0">
                        <Border Background="#ecf0f1" 
                               CornerRadius="3" 
                               Padding="5,2" 
                               Margin="2">
                            <TextBlock Text="admin / admin123" 
                                      FontSize="11"/>
                        </Border>
                        <Border Background="#ecf0f1" 
                               CornerRadius="3" 
                               Padding="5,2" 
                               Margin="2">
                            <TextBlock Text="ivanov / client123" 
                                      FontSize="11"/>
                        </Border>
                        <Border Background="#ecf0f1" 
                               CornerRadius="3" 
                               Padding="5,2" 
                               Margin="2">
                            <TextBlock Text="sidorova / client456" 
                                      FontSize="11"/>
                        </Border>
                    </WrapPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>