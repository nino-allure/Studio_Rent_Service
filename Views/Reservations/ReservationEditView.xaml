<Window x:Class="Studio_Rent_Service.Views.Reservations.ReservationEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Studio_Rent_Service.Views.Reservations"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="650" 
        Width="550"
        MinHeight="600" 
        MinWidth="500"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                  Text="{Binding WindowTitle}" 
                  FontSize="20" 
                  FontWeight="Bold"
                  Margin="0,0,0,15"
                  HorizontalAlignment="Center"/>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Код бронирования -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Код бронирования:" Grid.Column="0"/>
                    <TextBox Grid.Column="1" 
                            Text="{Binding Code}"
                            IsReadOnly="True"
                            Background="#f5f5f5"/>
                </Grid>

                <!-- Дата бронирования -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Дата бронирования:" Grid.Column="0"/>
                    <DatePicker Grid.Column="1" 
                               SelectedDate="{Binding BookingDate}"/>
                </Grid>

                <!-- Время начала -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Время начала:" Grid.Column="0"/>
                    <ComboBox Grid.Column="1" 
                             ItemsSource="{Binding AvailableTimes}"
                             SelectedItem="{Binding SelectedStartTime}"/>
                </Grid>

                <!-- Продолжительность -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Продолжительность:" Grid.Column="0"/>
                    <ComboBox Grid.Column="1" 
                             ItemsSource="{Binding Durations}"
                             SelectedItem="{Binding SelectedDuration}"/>
                </Grid>

                <!-- Студия -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Студия:" Grid.Column="0"/>
                    <ComboBox Grid.Column="1" 
                             ItemsSource="{Binding Studios}"
                             DisplayMemberPath="Name"
                             SelectedItem="{Binding SelectedStudio}"/>
                </Grid>

                <!-- Клиент -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Клиент:" Grid.Column="0"/>
                    <ComboBox Grid.Column="1" 
                             ItemsSource="{Binding Clients}"
                             DisplayMemberPath="FullName"
                             SelectedItem="{Binding SelectedClient}"/>
                </Grid>

                <!-- Статус -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Статус:" Grid.Column="0"/>
                    <ComboBox Grid.Column="1" 
                             ItemsSource="{Binding Statuses}"
                             SelectedItem="{Binding SelectedStatus}"/>
                </Grid>

                <!-- Стоимость -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Стоимость:" Grid.Column="0"/>
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                Text="{Binding Cost, StringFormat='{}{0:N0}'}"/>
                        <TextBlock Text="₽" 
                                  Grid.Column="1" 
                                  Margin="10,0,0,0"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Grid>

                <!-- Комментарий -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Комментарий:" Grid.Column="0"/>
                    <TextBox Grid.Column="1" 
                            Height="80"
                            Text="{Binding Comment}"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"/>
                </Grid>

                <!-- Информация о стоимости -->
                <Border BorderBrush="#bdc3c7" 
                       BorderThickness="0,1,0,0"
                       Padding="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Расчет стоимости" 
                                  FontWeight="Bold"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CostCalculationInfo}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center"
                   Margin="0,15,0,0">
            <Button Content="Сохранить" 
                   Background="#27ae60" 
                   Foreground="White"
                   Click="BtnSave_Click"
                   MinWidth="100"/>

            <Button Content="Отмена" 
                   Background="#7f8c8d" 
                   Foreground="White"
                   Click="BtnCancel_Click"
                   Margin="10,0,0,0"
                   MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>
